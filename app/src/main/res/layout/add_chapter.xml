<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#CCFFFF"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Chapter"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:id="@+id/ngayup">
        </DatePicker>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edt_new_chapter_ngayup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/material_dynamic_neutral80"
            android:textStyle="italic"
            android:hint="Ngay up"
            android:padding="12dp"
            android:background="@drawable/edittext_rounded"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edt_new_chapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded"
            android:hint="Title"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/material_dynamic_neutral80"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edt_new_chapter_noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Noi dung Chapter"
            android:textColorHint="@color/material_dynamic_neutral80"
            android:textStyle="italic"
            android:background="@drawable/edittext_rounded"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine"
            android:minLines="3"/>

        <Button
            android:id="@+id/btnAddChapter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Chapter"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>