<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/item_novel"
    android:background="@color/material_dynamic_neutral60">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="1dp">

        <ImageView

            android:id="@+id/imgAnhTruyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/test">

        </ImageView>

        <TextView
            android:id="@+id/txtTenChap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#AB000000"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:maxLines="1"
            android:ellipsize="end">

        </TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtTenTruyen"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textStyle="bold"
        android:background="@color/material_dynamic_tertiary95"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end">
    </TextView>

</LinearLayout>